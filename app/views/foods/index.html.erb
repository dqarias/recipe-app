<p style="color: green"><%= notice %></p>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h1>Foods</h1>
    </div>
    <div class="col">
    
      <%= link_to "Add new Food", new_food_path, :class => 'btn btn-sm btn-outline-secondary' %>
    </div>
  </div>
  <div id="foods">
    <div class="container-fluid">
      <table class="table">
        <thead class="table-blue">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Measurement unit</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
        <tr>
      <th scope="row"><%= food.name %></th>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= food.quantity %></td>
      <td><%= button_to "Delete", food, method: :delete, class: 'btn btn-sm btn-outline-danger' %> </td>
    </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>